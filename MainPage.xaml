<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemindMe.MainPage"
             >

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="RemindMe!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />


            <Button
                x:Name="StartReminderBtn"
                FontSize="Large"
                BorderWidth="1"
                BorderColor="Gray"
                Text="Start"
                SemanticProperties.Hint="Click to start reminder"
                Clicked="OnStartReminderClicked"
                HorizontalOptions="Center" />

            <Label
                x:Name="GeoCoordLabel"
                Text="Start before leaving home."
                FontSize="18"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"/>
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
